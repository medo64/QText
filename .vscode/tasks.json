{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOn": [
                "clean"
            ],
            "type": "process",
            "windows": {
                "command": "C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Community\\MSBuild\\Current\\Bin\\amd64\\msbuild.exe",
                "args": [
                    "-p:Configuration=Debug;DebugType=portable;PlatformTarget=x64",
                    "QText.sln"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/Source/"
            },
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "DEL",
                "args": [
                    ".\\Binaries\\*"
                ]
            }
        }
    ]
}